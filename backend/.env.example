# Database Configuration
DATABASE_URL=postgresql://carcollection:yourpassword@localhost/carcollection_db

# Security Configuration
SECRET_KEY=your-secret-key-here-generate-with-openssl
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=4

# CORS Configuration
# For initial testing with IP address:
# CORS_ORIGINS=http://93.127.194.202,https://93.127.194.202
# For production with domain:
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Application Settings
ENVIRONMENT=production
DEBUG=False

# Email Configuration (for future invitation system)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=CarCollection <noreply@yourdomain.com>

# Invitation Settings
INVITATION_EXPIRY_DAYS=7
ALLOW_REGISTRATION=False

# Server Configuration
HOST=127.0.0.1
PORT=8000

# Frontend URL (for email links)
FRONTEND_URL=https://yourdomain.com